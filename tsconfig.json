{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": ["es7", "esnext", "dom"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "*/src/**/*"
    ],
    "exclude": ["node_modules"]
}
