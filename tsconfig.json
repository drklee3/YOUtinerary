{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": ["es7", "esnext", "dom"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    }
}
